<%- include("header",{element: element}); -%>

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right align-item-center mt-2">
                <a href="#custom-modal" class="btn btn-info px-4 align-self-center report-btn" data-animation="blur" data-plugin="custommodal" data-overlaycolor="#38414a">Add Center</a>
            </div>
            <h4 class="page-title mb-2"><i class="mdi mdi-monitor mr-2"></i>Dashboard</h4>  
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">District Covid Management</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>                                      
        </div>
    </div>
</div>
<!-- end page title end breadcrumb -->
<%- include("header2"); -%>
            <!-- Page Content-->
            <div class="page-content" style="overflow: scroll;">
                    <div class="container" style="overflow: scroll;">

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="mt-0 header-title">Center List</h4>
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                        <tr>
                                            <th>Center Id</th>
                                            <th>Facility Name</th>
                                            <th>Category</th>
                                            <th>General Bed</th>
                                            <th>Oxygen Bed</th>
                                            <th>ICU Bed</th>
                                            <th>No Ventilators</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Village</th>
                                            <th>Block</th>
                                            
                                        </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                    
                                                <th></th>
                                                <th></th>
                                                <th> </th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                    
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% centers_list.forEach(element => {  %>
                                                <tr>
                                                    <td><%= element.center_id%></td>
                                                    <td><%= element.facility_name%></td> 
                                                    <td><%= element.category%></td>
                                                    <td><%= element.no_general_bed%></td>
                                                    <td><%= element.no_oxygen_bed%></td>
                                                    <td><%= element.no_icu_bed%></td>
                                                    <td><%= element.no_ventilator%></td> 
                                                    <td><%= element.email%></td> 
                                                    <td><%= element.telephone%></td> 
                                                    <td><%= element.village%></td> 
                                                    <td><%= element.block%></td>
                                                   
                                                </tr>
                                                
                                            <% }) %>
                                        </tbody>
                                    </table>        
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->

                    <div id="custom-modal" class="modal-demo">
                        <button type="button" class="close" onclick="Custombox.modal.close();"><span>Ã—</span><span
                                class="sr-only">Close</span></button>
                        <div class="card">
                            <div class="card-body">        
                                <h4 class="mt-0 header-title">Add Centre</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form action="/add_center" method="post">
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-2 col-form-label text-right">Name of the facility</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" name="facility_name" id="example-text-input">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label text-right">Category</label>
                                                <div class="col-sm-10">
                                                    <select class="form-control" name="category" required>
                                                        <option value="">Select a Category</option>
                                                        <option value="DCCC">DCCC</option>
                                                        <option value="DCHC">DCHC</option>
                                                        <option value="DCH">DCH</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-email-input" class="col-sm-2 col-form-label text-right">Email</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="email" name="email" id="example-email-input">
                                                </div>
                                            </div> 
                                            <div class="form-group row">
                                                <label for="example-tel-input" class="col-sm-2 col-form-label text-right">Telephone</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="tel" name="telephone" id="example-tel-input">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-2 col-form-label text-right">Village/City/NAC</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" name="village" id="example-text-input" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-2 col-form-label text-right">Block</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" list="block_list" type="text" name="block" id="example-text-input" required>
                                                    <datalist id="block_list">
                                                        <option value="ASKA"></option></option>
                                                        <option value="BEGUNIAPADA_KODALA"></option>
                                                        <option value="BELLAGUNTHA"></option>
                                                        <option value="BHANJANAGAR"></option>
                                                        <option value="BUGUDA"></option>
                                                        <option value="CHATRAPUR"></option>
                                                        <option value="CHIKITI"></option>
                                                        <option value="DHARAKOTE"></option>
                                                        <option value="DIGAPAHANDI"></option>
                                                        <option value="GANJAM"></option>
                                                        <option value="HINJILICUT"></option>
                                                        <option value="J.N.PRASAD">Jagannathprasad</option>
                                                        <option value="K.S.NAGAR">Kabisurya Nagar                                                        </option>
                                                        <option value="KHALLIKOTE"></option>
                                                        <option value="KUKUDAKHANDI"></option>
                                                        <option value="PATRAPUR"></option>
                                                        <option value="POLOSARA"></option>
                                                        <option value="PURUSHOTTAMPUR"></option>
                                                        <option value="RANGEILUNDA"></option>
                                                        <option value="SANAKHEMUNDI"></option>
                                                        <option value="SHERAGADA"></option>
                                                        <option value="SURADA"></option>
                                                        <option value="BeMC">Berhampur</option>
                                                        <option value="OTHER"></option>
                                                        </datalist>
                                                </div>
                                            </div>
                                            <h4 class="mt-0 header-title">Give Sections Information</h4>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">NO OF GENERAL BED</label> 
                                                <div class="col-sm-8">
                                                    <input class="form-control" type="number" name="no_general_bed" value="0" id="example-text-input" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">No OF OXYGEN BED</label>
                                                <div class="col-sm-8">
                                                    <input class="form-control" type="number" name="no_oxygen_bed" value="0" id="example-text-input" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">No Of ICU BED</label>
                                                <div class="col-sm-8">
                                                    <input class="form-control" type="number" name="no_icu_bed" value="0" id="example-text-input" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">NO OF VENTILATOR</label>
                                                <div class="col-sm-8">
                                                    <input class="form-control" type="number" name="no_ventilator" value="0" id="example-text-input" required>
                                                </div>
                                            </div>

                                                
                                                
                                                
                                                
                                            <div class="row">
                                                <div class="col-sm-12 text-right">
                                                    <button type="submit" class="btn btn-primary">Add Center</button>
                                                </div>
                                            </div>  
                                        </form>                       
                                    </div>
                                </div>                                                                      
                            </div><!--end card-body-->
                            <!--end card-body-->
                        </div>
                    </div>


                </div><!-- container -->

               
            </div>
<%- include("footer"); -%>
