<%- include("header",{element: element}); -%>

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right align-item-center mt-2">
                <!-- <a href="#custom-modal" class="btn btn-info px-4 align-self-center report-btn" data-animation="blur" data-plugin="custommodal" data-overlaycolor="#38414a">Add Center</a> -->
            </div>
            <h4 class="page-title mb-2"><i class="mdi mdi-monitor mr-2"></i>Hospitals List</h4>  
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">District Covid Management</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>                                      
        </div>
    </div>
</div>
<!-- end page title end breadcrumb -->
<%- include("header2"); -%>
            <!-- Page Content-->
            <div class="page-content" style="overflow: scroll;">
                    <div class="container" style="overflow: scroll;">

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="mt-0 header-title">Center List</h4>
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                        <tr>
                                            <th>Center Id</th>
                                            <th>Facility Name</th>
                                            <th>Category</th>
                                            <th>Overall Bed</th>
                                            <th>General Bed</th>
                                            <th>Oxygen Bed</th>
                                            <th>HDU Bed</th>
                                            <th>Total ICU Bed</th>
                                            <th>Ventilator Devices</th>
                                            <th>Incharge Name</th>
                                            <th>Phone</th>
                                            <th>Village</th>
                                            <th>Block</th>
                                            <th>Sections</th>
                                            <th>Patient List</th>
                                            
                                        </tr>
                                        </thead>
                                        <tbody>

                                            <% hospital_list.forEach(element => {  %>
                                                
                                                <tr>
                                                    <td><%= element.hospital.center_id%></td>
                                                    <td><%= element.hospital.facility_name%></td> 
                                                    <td><%= element.hospital.category%></td>
                                                    <td><%= element.total_bed_occupied%> / <%= element.total_bed_available%></td>
                                                    <td><%= element.total_general_bed_occupied%> / <%= element.hospital.no_general_bed%></td>
                                                    <td><%= element.total_oxygen_bed_occupied%> / <%= element.hospital.no_oxygen_bed%></td>
                                                    <td><%= element.total_hdu_bed_occupied%> / <%= element.hospital.no_hdu_bed%></td>
                                                    <td><%= element.total_icu_bed_occupied +element.total_ventilator_bed_occupied%> / <%= element.hospital.no_icu_bed +element.hospital.no_ventilator%></td>
                                                    <td><%= element.total_ventilator_bed_occupied%> / <%= element.hospital.no_ventilator%></td> 
                                                    <td><%= element.hospital.email%></td> 
                                                    <td><%= element.hospital.telephone%></td> 
                                                    <td><%= element.hospital.village%></td> 
                                                    <td><%= element.hospital.block%></td>
                                                    <td><a href="/hospital_details/<%= element.hospital.center_id%>"> Click for Detailed View</a></td>
                                                    <td><a href="/h_patient_list/<%= element.hospital.center_id%>"> Click for Detailed View</a></td>
                                                   
                                                </tr>
                                                
                                            <% }) %>
                                        </tbody>
                                    </table>        
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->

                </div><!-- container -->

               
            </div>
<%- include("footer"); -%>
