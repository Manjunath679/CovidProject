<%- include("header",{element: element}); -%>
<style>

</style>

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right align-item-center mt-2">
                <a href="#custom-modal" class="btn btn-info px-4 align-self-center report-btn" data-animation="blur"
                    data-plugin="custommodal" data-overlaycolor="#38414a">Add Center</a>
            </div>
            <h4 class="page-title mb-2"><i class="mdi mdi-monitor mr-2"></i>Center Management</h4>
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">District Covid Management</a></li>
                    <li class="breadcrumb-item active">Center Management</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title end breadcrumb -->
<%- include("header2"); -%>
<!-- Page Content-->
<div class="page-content" style="overflow: scroll;">
        <div class="container" style="overflow: scroll;">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Center List</h4>
                        <table id="co_centre_list" class="table table-striped table-bordered dt-responsive "
                            style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Center </th>
                                    <th>Category</th>
                                    <th>Total Beds</th>
                                    <th>General Bed</th>
                                    <th>Oxygen Bed</th>
                                    <th>HDU Bed</th>
                                    <th>Total ICU Bed</th>
                                    <th>Ventilator Device</th>
                                    <th>Village</th>
                                    <th>Block</th>
                                    <th>Incharge Name</th>
                                    <th>Reference Id</th>
                                    <th>Phone</th>

                                </tr>
                            </thead>
                            
                            <tbody>
                                <% centers_list.forEach(element => {  %>
                                <tr>
                                    <td scope="col"><%= element.center_id%><br>
                                   <strong><%= element.facility_name%></strong> </td>
                                   
                                    <td scope="col"><%= element.category%><br>Total Bed: </td>
                                    <td><%= element.no_general_bed + element.no_oxygen_bed + element.no_hdu_bed + element.no_icu_bed + element.no_ventilator%></td>
                                    <td><%= element.no_general_bed%></td>
                                    <td><%= element.no_oxygen_bed%></td>
                                    <td><%= element.no_hdu_bed%></td>
                                    <td><%= element.no_icu_bed+ element.no_ventilator%></td>
                                    <td><%= element.no_ventilator%></td>
                                    <td><%= element.village%></td>
                                    <td><%= element.block%></td>
                                    <td><%= element.email%></td>
                                    <td><%= element.center_id.substring(4) %></td>
                                    <td><%= element.telephone%></td>
                                    

                                </tr>

                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

        <div id="custom-modal" class="modal-demo">
            <button type="button" class="close" onclick="Custombox.modal.close();"><span>Ã—</span><span
                    class="sr-only">Close</span></button>
            <div class="card">
                <div class="card-body">
                    <h4 class="mt-0 header-title">Add Centre</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/add_center" method="post">
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-2 col-form-label text-right">Name of
                                        the facility</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="facility_name"
                                            id="example-text-input">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label text-right">Category</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" name="category" required>
                                            <option value="">Select a Category</option>
                                            <!-- <option value="DCCC">DCCC</option> -->
                                            <option value="DCHC">DCHC</option>
                                            <option value="CASUALTY">CASUALTY</option>
                                            <option value="DCH">DCH</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-email-input"
                                        class="col-sm-2 col-form-label text-right">Incharge Name</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="email" id="example-email-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-tel-input"
                                        class="col-sm-2 col-form-label text-right">Telephone</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="tel" name="telephone" id="example-tel-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input"
                                        class="col-sm-2 col-form-label text-right">Village/City/NAC</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="village" id="example-text-input"
                                            required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input"
                                        class="col-sm-2 col-form-label text-right">Block</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" list="block_list" type="text" name="block"
                                            id="example-text-input" required>
                                            <option value="">Select</option>
                                            <option value="ASKA">ASKA</option>
                                            <option value="BEGUNIAPADA_KODALA">BEGUNIAPADA_KODALA</option>
                                            <option value="BELLAGUNTHA">BELLAGUNTHA</option>
                                            <option value="BHANJANAGAR">BHANJANAGAR</option>
                                            <option value="BUGUDA">BUGUDA</option>
                                            <option value="CHATRAPUR">CHATRAPUR</option>
                                            <option value="CHIKITI">CHIKITI</option>
                                            <option value="DHARAKOTE">DHARAKOTE</option>
                                            <option value="DIGAPAHANDI">DIGAPAHANDI</option>
                                            <option value="GANJAM">GANJAM</option>
                                            <option value="HINJILICUT">HINJILICUT</option>
                                            <option value="J.N.PRASAD">Jagannathprasad</option>
                                            <option value="K.S.NAGAR">Kabisurya Nagar </option>
                                            <option value="KHALLIKOTE">KHALLIKOTE</option>
                                            <option value="KUKUDAKHANDI">KUKUDAKHANDI</option>
                                            <option value="PATRAPUR">PATRAPUR</option>
                                            <option value="POLOSARA">POLOSARA</option>
                                            <option value="PURUSHOTTAMPUR">PURUSHOTTAMPUR</option>
                                            <option value="RANGEILUNDA">RANGEILUNDA</option>
                                            <option value="SANAKHEMUNDI">SANAKHEMUNDI</option>
                                            <option value="SHERAGADA">SHERAGADA</option>
                                            <option value="SURADA">SURADA</option>
                                            <option value="BEMC">Berhampur(BEMC)</option>
                                            <option value="OTHER">OTHER</option>
                                        </select>
                                    </div>
                                </div>
                                <h4 class="mt-0 header-title">Give Sections Information</h4>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right"> NO OF ISOLATION BED </label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_isolation_bed" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right">NO OF
                                        GENERAL BED WITHOUT OXYGEN</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_general_bed" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right">No OF
                                        GENERAL BED WITH OXYGEN</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_oxygen_bed" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right"> NO OF HDU (Highly Dependent Unit) BED </label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_hdu_bed" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>
                                
                                
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right">No Of ICU
                                        BED WITHOUT VENTILATOR</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_icu_bed" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right">NO OF
                                        ICU BED WITH VENTILATOR </label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="number" name="no_ventilator" value="0"
                                            id="example-text-input" required>
                                    </div>
                                </div>





                                <div class="row">
                                    <div class="col-sm-12 text-right">
                                        <button type="submit" class="btn btn-primary">Add Center</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!--end card-body-->
                <!--end card-body-->
            </div>
        </div>


    </div><!-- container -->


</div>
<%- include("footer"); -%>